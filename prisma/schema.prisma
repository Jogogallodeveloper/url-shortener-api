generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model short_urls {
  id          String   @id @default(uuid())
  code        String   @unique
  originalUrl String   @db.Text
  createdAt   DateTime @default(now())
  visitCount  Int      @default(0)

  @@map("short_urls")
}
